#!/bin/bash
(cd ~/.config; cvs update)
FILELIST=(.bash_complete .bash_logout .bash_profile .bashrc bin/big-vim \
bin/keychain-ssh bin/keychain-wrapper .cvsrc .dircolors .ssh/config .vimrc \
.Xresources etc/LaTeX.Makefile)
DIRLIST=(bin .ssh etc)
PWD=`pwd`
for i in ${DIRLIST[*]}; do
  if [ ! -d ~/$i ]; then
    mkdir ~/$i
  fi
done
for i in ${FILELIST[*]}; do
  echo $i
  if [ -e ~/$i ]; then
    rm ~/$i
  fi
  ln ~/.config/$i ~/$i
done
