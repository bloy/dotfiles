#!/bin/bash
FILELIST=~/.config/make_links_files
DIRLIST=~/.config/make_links_dirs
PWD=`pwd`
echo -n creating directories...
for i in `cat ${DIRLIST}`; do
  if [ ! -d ~/$i ]; then
    mkdir ~/$i
  fi
done
echo done
echo -n linking files...
for i in `cat ${FILELIST}`; do
  if [ -e ~/$i ]; then
    rm ~/$i
  fi
  ln ~/.config/$i ~/$i
done
echo done
