#!/bin/bash
(cd ~/.config; cvs update)
FILELIST=(.bash_complete .bash_logout .bash_profile .bashrc bin/keychain-ssh \
  bin/keychain-wrapper .cvsrc .dircolors .ssh/config .vimrc .Xresources)
SOFTLINKLIST=(.vim)
PWD=`pwd`
if [ ! -d ~/bin ]; then
  mkdir ~/bin
fi
for i in ${SOFTLINKLIST[*]}; do
  echo $i
  if [ -f ~/$i ]; then 
    rm ~/$i
  fi
  ln -s ~/.config/$i ~/$i
done
for i in ${FILELIST[*]}; do
  echo $i
  if [ -f ~/$i ]; then
    rm ~/$i
  fi
  ln ~/.config/$i ~/$i
done
