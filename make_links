#!/bin/bash
CFGDIR=~/.svnconfig
FILELIST="${CFGDIR}/make_links_files"
DIRLIST="${CFGDIR}/make_links_dirs"
PWD=`pwd`
cd "${CFGDIR}"
echo -n creating directories...
for i in `cat ${DIRLIST}`; do
  if [ -d ~/.svnconfig/$i ]; then
    if [ ! -d ~/$i ]; then
      mkdir ~/$i
    fi
  fi
done
echo done
echo -n linking files...
for i in `cat ${FILELIST}`; do
  if [ -e ~/.svnconfig/$i ]; then
    if [ -e ~/$i ]; then
      rm ~/$i
    fi
  ln ~/.svnconfig/$i ~/$i
  fi
done
echo done
